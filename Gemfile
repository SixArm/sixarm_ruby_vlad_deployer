# Vlad deployer gems we use together-- add these to your Rails Gemfile

group :development do
  gem 'vlad', :require => false  # Pragmatic application deployment automation.
  gem 'vlad-git', :require => false   # Vlad plugin for git source code management.
  gem 'vlad-extras', :require => false    # Vlad plugin for assets, symlinks, more.
end

